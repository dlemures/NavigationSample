<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.dlemures.navigationsample.app.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main">
        <action
            android:id="@+id/action_mainActivity_to_activity1"
            app:destination="@id/activity1" />
    </activity>
    <activity
        android:id="@+id/activity1"
        android:name="com.dlemures.navigationsample.module1.Activity1"
        android:label="activity_1"
        tools:layout="@layout/activity_1" />
</navigation>